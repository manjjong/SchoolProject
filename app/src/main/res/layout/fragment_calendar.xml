<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_selectionColor="#a9dbf0cb"
        app:mcv_showOtherDates="defaults" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calendar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:text="20.í† "/>

            <TextView
                android:id="@+id/calendar_no_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="No Information"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/calendar_schedule_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Schedule"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/calendar_shedule_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="test"
                android:textSize="15dp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/calendar_exercise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Exercise"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/calendar_exercise_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="test"
                android:textSize="15dp"
                android:textColor="@color/gray" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>